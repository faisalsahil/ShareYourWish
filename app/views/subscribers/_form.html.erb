
<div id="subscriber-form">
<div class="alerts-container"></div>

<%= form_for(@subscriber, :remote => true) do |f| %>
	<div class="field">
	  Name:<br>
	 <%= f.text_field :full_name , :id=> 'full_name',  :placeholder => "Your Name", :class => "form-field-medium" %>
	</div>  
	<div class="field">
		Email:<br>
		<%= f.text_field :email, :id=> 'email',  :placeholder => "Email", :class => "form-field-medium"  %>
	</div>
  <div class="field">
	  Comment:<br>
	<%= f.text_area :comment, :id=> 'comment', :placeholder => "(optional) Comment", :style => "width: 300px; height: 100px;"  %>
  </div>
  <div class="field">
	  Make My Comment Public (optional): <%= f.check_box :displayme, :id=> 'displayme', :default => :checked %>
  </div>
 <div class="actions">                                                  	
	    <%= f.submit :value => 'Sign Up', :class => 'button-type-standard button-size-medium button-color-green'%>
  </div> 
<% end %>

</div>