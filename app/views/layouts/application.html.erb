			})();

		</script>
		<% if production? %>
			<!-- kissmetrics -->
			<script type="text/javascript">
			  var _kmq = _kmq || [];
			  var _kmk = _kmk || 'ef919d390878c3ef50faf3c058fe7f0ce31100a5';
