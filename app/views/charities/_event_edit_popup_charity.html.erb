<% if defined?(charity) && defined?(picked) %>
<div class="charity_container_full" id="charity_<%= charity.id %>" data-id="<%= charity.id %>">
	<div class="charity_container_full_left_col">
		<div class="charity_image">
			<% if charity.picture && charity.picture.image? %>
			<%= image_tag charity.picture.image.url(:medium) %>
			<% else %>
			<%= image_tag 'missing_medium.png' %>
			<% end %>
		</div>
		<p>
			<div class="charity_button">
				<input type="button" value="Select" class="add_charity_f_button<%= picked ? ' hidden' : '' %>" tabindex="260" />
				<input type="button" value="Remove" class="remove_charity_f_button<%= picked ? '' : ' hidden'  %>" tabindex="250" />
			</div>
	</div>
	<div class="charity_name">
		<%= charity.name %>
	</div>
	<div class="charity_description">
		<%= nl2br(charity.description) %>
	</div>
	<!--
	<strong>Location:</strong> <%= charity.region %>
	<br/>
	<strong>Website:</strong> <%= website charity %>
	-->
</div>
<% if @charities %>
<div class="clearfloat"></div>
<div class="charity_paging centered flickr_pagination">
	<%= will_paginate @charities %>
</div>
<% end %>

<% end %>
